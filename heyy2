<body>

  <div class="container">
    <h1 id="question">Shanzu, will you be my valentine?</h1>

    <div class="buttons">
      <button id="yesBtn">Yes</button>
      <button id="noBtn">No</button>
    </div>
  </div>

  <script>
    const question = document.getElementById("question");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");

    let noClicks = 0;
    let yesScale = 1;
    let noScale = 1;

    const noMessages = [
      "nice try smartypants but the No button is broken üò¢",
      "No-uh u are not gonna say No to your baby boy, not today."
    ];

    noBtn.addEventListener("click", () => {
      noClicks++;

      // Shrink NO and grow YES
      noScale *= 0.8;
      yesScale *= 1.2;

      noBtn.style.transform = `scale(${noScale})`;
      yesBtn.style.transform = `scale(${yesScale})`;

      // Alternate messages
      question.textContent = noMessages[(noClicks - 1) % 2];
    });

    yesBtn.addEventListener("click", () => {
      document.querySelector(".container").innerHTML = `
        <div class="celebration">
          WOAHHHHHHH GUYS SHE SAID YESSSSSSSSSSS RAAAAAAAAAAAA ‚ù§Ô∏è<br/><br/>
          I LOVE YOU SO MUCH ‚ù§Ô∏è<br/><br/>
          Here's a chocolate for you üç´
        </div>
      `;
    });
  </script>

